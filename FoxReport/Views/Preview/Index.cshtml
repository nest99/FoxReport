        <h4>产品事务</h4>
        <div style="width:100%;">
        <table style="border-collapse:collapse; border:0; width:100%;">
            <tr>
                <th class="thTitle productT1C1">分类</th>
                <th class="thTitle productT1C2">优先级</th>
                <th class="thTitle productT1C3">负责人</th>
                <th class="thTitle productT1C4">工作计划</th>
                <th class="thTitle productT1C5">进展情况</th>
            </tr>
        @foreach (var item in Model.AffairProductList)
        {
            <tr>
                <td class="tdBorder productT1C1">@item.Classify</td>                            
                <td class="tdBorder productT1C2">@item.Priority</td>
                <td class="tdBorder productT1C3">@item.Tracker</td>
                <td class="tdBorder productT1C4">@Html.Raw(item.Workplan)</td>
                <td class="tdBorder productT1C5">@Html.Raw(item.Progress)</td>
            </tr>
        }
